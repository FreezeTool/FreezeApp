<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tip"
        style="@style/TextView.Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:padding="10dp"
        android:text="@string/file_server_tip"
        android:textSize="12dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/btn_background"
            android:layout_width="5dp"
            android:layout_height="30dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="APP根目录FS"
            android:textColor="@color/textColorSecondary"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_url"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="111111"
        android:textColor="@color/textColorSecondary"
        android:textSize="14dp" />


    <!--    <androidx.appcompat.widget.AppCompatEditText-->
    <!--        android:id="@+id/et_command"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_weight="1"-->
    <!--        android:background="@drawable/tip_background"-->
    <!--        android:paddingLeft="10dp"-->
    <!--        android:paddingRight="10dp"-->
    <!--        android:textSize="14dp" />-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_file_server"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_background"
        android:text="@string/command_btn_execute"
        android:textColor="@color/homeButtonColor"
        app:cornerRadius="300dp" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/btn_background"
            android:layout_width="5dp"
            android:layout_height="30dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="APP内部沙盒FS"
            android:textColor="@color/textColorSecondary"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_internal_app_url"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="111111"
        android:textColor="@color/textColorSecondary"
        android:textSize="14dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>